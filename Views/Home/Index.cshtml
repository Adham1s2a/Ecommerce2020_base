<link href="~/css/swiper-bundle.min.css" rel="stylesheet" />

<div style="
     font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
     font-size: 14px;
     color: #000;
     margin-bottom:15px;
     display:flex;
     justify-content:center;
     align-items:center;
     min-height:50vh;
     background:#fff">

    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">

            @foreach (var category in Model.CategoryList)
            {
                var photopath = "~/Images/" + (category.Photopath ?? "noimage.jpg");

                <div class="swiper-slide">
                    <a asp-controller="home" asp-action="InstaStory" asp-route-id="@category.ID">
                        <img src="@photopath" style="width: 250px;height: 250px;border-radius: 50%;border: groove;border-color: dodgerblue" asp-append-version="true" />
                    </a>
                </div>

            }<!--1------------------------------>


        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>

    <!-- Swiper JS -->
    <script src="../package/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
</div>

<style>

    .swiper-container {
        width: 100%;
        padding-top: 50px;
        padding-bottom: 100px;
    }

    .swiper-slide {
        background-position: center;
        background-size: cover;
        width: 250px;
        height: 250px;
        background: #000;
        border-radius: 50%;
        -webkit-box-reflect: below 1px linear-gradient(transparent,transparent,#0006);
    }
</style>
<script src="~/js/swiper-bundle.min.js"></script>
@section Scripts {
    <script>
        var swiper = new Swiper('.swiper-container', {
            effect: 'coverflow',
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: 'auto',
            coverflowEffect: {
                rotate: 20,
                stretch: 0,
                depth: 200,
                modifier: 1,
                slideShadows: false,
            },
            loop: true,
            autoplay: {
                delay: 2500,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
            },
        });
    </script>
}
