@ViewBag.total
@model Offer


    <div class="container">

        <form enctype="multipart/form-data" asp-controller="checkout"
              method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="OfferCode" class="col-sm-2 col-form-label" style="color:black;font-size:large"></label>
                <div class="col-sm-10">
                    <input asp-for="OfferCode" class="form-control" placeholder="OfferCode">
                    <span asp-validation-for="OfferCode" class="text-danger"></span>
                </div>
            </div>
         
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>

           
        </form>
    </div>