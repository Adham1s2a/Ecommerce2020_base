
@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Create Category";
}

<br />
<br />
<br />
<br />
@*To support file upload set the form element enctype="multipart/form-data" *@
<div class="container">
    <form enctype="multipart/form-data" asp-controller="Admin" asp-action="CreateCategory"
          method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="CategoryName" class="col-sm-2 col-form-label" style="color:black;font-size:large"></label>
            <div class="col-sm-10">
                <input asp-for="CategoryName" class="form-control" placeholder="CategoryName">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="OfferStatus" class="col-sm-2 col-form-label" style="color:black;font-size:large"></label>
            <div class="col-sm-10">
                <input asp-for="OfferStatus" class="form-control" placeholder="OfferStatus">
                <span asp-validation-for="OfferStatus" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="OfferPersent" class="col-sm-2 col-form-label" style="color:black;font-size:large"></label>
            <div class="col-sm-10">
                <input asp-for="OfferPersent" class="form-control" placeholder="OfferPersent" value="0">
                <span asp-validation-for="OfferPersent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="OfferAmount" class="col-sm-2 col-form-label" style="color:black;font-size:large"></label>
            <div class="col-sm-10">
                <input asp-for="OfferAmount" class="form-control" placeholder="OfferAmount" value="0">
                <span asp-validation-for="OfferAmount" class="text-danger"></span>
            </div>
        </div>

        @*  asp-for tag helper is set to "Photo" property. "Photo" property type is IFormFile
        so at runtime asp.net core generates file upload control (input type=file)
        *@

        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label" style="color:black;font-size:large"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">

                </div>
            </div>
        </div>
        @*<div class="form-group row">
            <label asp-for="BG" class="col-sm-2 col-form-label" style="color:black;font-size:large"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="BG" class="form-control custom-file-input">

                </div>
            </div>
        </div>*@
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>

        @*This script is required to display the selected file in the file upload element*@

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
</div>